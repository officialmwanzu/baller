    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 3. RECTIFICATION: Simplified the JavaScript for droplets and removed redundant hover logic.

            // Initialize Lucide icons on the page
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }

            const droplets = document.querySelectorAll('.oil-droplet');
            
            droplets.forEach((droplet, index) => {
                // Add animation delay based on index for variety
                if (!droplet.style.animationDelay) {
                    droplet.style.animationDelay = `${index * 1.5}s`;
                }
            });

            // Set the current year for the copyright notice
            const currentYearElement = document.getElementById('currentYear');
            if (currentYearElement) {
                currentYearElement.textContent = new Date().getFullYear();
            }
            
            // NOTE: The product card hover effect is now purely CSS, as originally intended.
            // The redundant JS listeners for 'mouseenter' and 'mouseleave' were removed.
        });
    </script>
</body>
</html>
